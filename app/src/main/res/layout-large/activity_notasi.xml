<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_materi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.example.ojan11.arindika.submateri.Notasi"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bgbiru">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic" />

        <TextView
            android:id="@+id/tmain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="PITCH"
            android:textColor="@color/black"
            android:textSize="35dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="@drawable/bg">

        <Button
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/pitch_a"
            android:background="@drawable/p1"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginRight="5dp"
            android:id="@+id/pitch_b"
            android:background="@drawable/p2"
            android:layout_below="@+id/pitch_a"
            android:layout_marginTop="13dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:id="@+id/pitch_c"
            android:background="@drawable/p3"
            android:layout_below="@+id/pitch_b"
            android:layout_marginTop="13dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/pitch_d"
            android:background="@drawable/p4"
            android:layout_below="@+id/pitch_c"
            android:layout_marginTop="13dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginRight="5dp"
            android:id="@+id/pitch_e"
            android:background="@drawable/p5"
            android:layout_below="@+id/pitch_d"
            android:layout_marginTop="13dp"/>
    </LinearLayout>

</LinearLayout>
