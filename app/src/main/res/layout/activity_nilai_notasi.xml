<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_materi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.example.ojan11.arindika.submateri.Notasi"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bgijoo">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic" />

        <TextView
            android:id="@+id/tmain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="NILAI NOTASI"
            android:textColor="@color/black"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="@drawable/bg">

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/nn1"
            android:background="@drawable/icnn1"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginRight="5dp"
            android:id="@+id/nn2"
            android:background="@drawable/icnn2"
            android:layout_below="@+id/nn1"
            android:layout_marginTop="13dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/nn3"
            android:background="@drawable/icnn3"
            android:layout_below="@+id/nn2"
            android:layout_marginTop="13dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/nn4"
            android:background="@drawable/icnn4"
            android:layout_below="@+id/nn3"
            android:layout_marginTop="13dp"/>


    </LinearLayout>

</LinearLayout>
